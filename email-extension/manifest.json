{
  "manifest_version": 3,
  "name": "AI Email Generator by Mosin Ansari",
  "version": "1.0",
  "description": "Suggest replies to emails using Gemini AI.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://mail.google.com/*", "http://localhost:8080/*"],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo2.png"
  }
}